{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "baseUrl": "src",
    "paths": {
      "assets/*": ["assets/*"]
    },
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "types": ["@testing-library/jest-dom", "vitest/globals"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["**/*.test.*"]
}
